# ===========================================
# Slop Studios 3 - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# -----------------------------
# Application Settings
# -----------------------------
NODE_ENV=development
PORT=3000
HOST=localhost

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Application secret for sessions/tokens (generate a strong random string)
APP_SECRET=your-secret-key-here-change-in-production

# Session TTL in seconds (default: 24 hours)
SESSION_TTL=86400

# -----------------------------
# Database Configuration
# -----------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/slopstudios3
DATABASE_POOL_SIZE=10
DATABASE_SSL=false

# -----------------------------
# Redis Configuration
# -----------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false

# -----------------------------
# External APIs
# -----------------------------
# Main API key for external services
API_KEY=your-api-key-here

# OpenAI / AI Services
OPENAI_API_KEY=sk-your-openai-key
OPENAI_ORGANIZATION=

# Anthropic / Claude Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
CLAUDE_CLI_PATH=/usr/local/bin/claude
CLAUDE_MAX_CONCURRENT_PROCESSES=5
CLAUDE_PROCESS_TIMEOUT_MS=300000

# Claude Queue and Fallback Settings
# Enable request queuing when max concurrent processes reached
CLAUDE_ENABLE_QUEUE=true
# Maximum number of requests to queue before rejecting
CLAUDE_MAX_QUEUE_SIZE=100
# Use Anthropic API as fallback when CLI is unavailable
CLAUDE_USE_API_FALLBACK=true

# Claude Retry/Backoff Settings
# Maximum number of retries for failed requests
CLAUDE_MAX_RETRIES=3
# Delay between retries in milliseconds
CLAUDE_RETRY_DELAY_MS=1000

# -----------------------------
# Strudel Configuration
# -----------------------------
# Maximum concurrent audio rendering processes
STRUDEL_MAX_CONCURRENT_RENDERS=3
# Timeout for rendering operations in milliseconds (2 minutes)
STRUDEL_RENDER_TIMEOUT_MS=120000
# Maximum pattern code length in characters
STRUDEL_MAX_PATTERN_LENGTH=100000
# Maximum audio duration in seconds (10 minutes)
STRUDEL_MAX_RENDER_DURATION=600
# Default audio sample rate in Hz
STRUDEL_DEFAULT_SAMPLE_RATE=44100
# Enable request queuing when max concurrent renders reached
STRUDEL_ENABLE_QUEUE=true
# Maximum number of requests to queue before rejecting
STRUDEL_MAX_QUEUE_SIZE=50
# Supported audio output formats (comma-separated, currently only wav is supported)
STRUDEL_AUDIO_FORMATS=wav

# -----------------------------
# Agent Orchestration Configuration
# -----------------------------
# Maximum concurrent workflow executions
AGENT_MAX_CONCURRENT_WORKFLOWS=10
# Timeout for workflow execution in milliseconds (10 minutes)
AGENT_WORKFLOW_TIMEOUT_MS=600000
# Enable request queuing when max concurrent workflows reached
AGENT_ENABLE_QUEUE=true
# Maximum number of workflows to queue before rejecting
AGENT_MAX_QUEUE_SIZE=100
# Maximum number of steps allowed in a single workflow
AGENT_MAX_WORKFLOW_STEPS=50
# TTL for workflow context data in seconds (1 hour)
AGENT_CONTEXT_TTL_SECONDS=3600
# Cache TTL for prompt templates in seconds (5 minutes)
AGENT_TEMPLATE_CACHE_TTL=300
# Enable parallel execution of workflow steps
AGENT_ENABLE_PARALLEL_EXECUTION=true
# Maximum number of steps to execute in parallel
AGENT_MAX_PARALLEL_STEPS=5

# -----------------------------
# Agent Collaboration Configuration
# -----------------------------
# Self-Critique Settings
# Maximum iterations for self-critique refinement
AGENT_CRITIQUE_MAX_ITERATIONS=5
# Default quality threshold for critique acceptance (0.0-1.0)
AGENT_CRITIQUE_DEFAULT_THRESHOLD=0.8
# Timeout for critique operations in milliseconds (10 minutes)
AGENT_CRITIQUE_TIMEOUT_MS=600000

# Discussion Settings
# Maximum discussion rounds before forcing conclusion
AGENT_DISCUSSION_MAX_ROUNDS=5
# Maximum number of agents that can participate in a discussion
AGENT_DISCUSSION_MAX_PARTICIPANTS=10
# Convergence threshold for discussion consensus (0.0-1.0)
AGENT_DISCUSSION_CONVERGENCE_THRESHOLD=0.85
# Timeout for discussion operations in milliseconds (15 minutes)
AGENT_DISCUSSION_TIMEOUT_MS=900000

# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=slopstudios3-assets

# -----------------------------
# Authentication
# -----------------------------
# JWT Configuration
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d

# OAuth Providers (if applicable)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# -----------------------------
# Email Configuration
# -----------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@slopstudios.com

# -----------------------------
# Monitoring & Observability
# -----------------------------
# Sentry DSN for error tracking
SENTRY_DSN=

# DataDog configuration
DATADOG_API_KEY=
DATADOG_APP_KEY=

# -----------------------------
# Circuit Breaker Configuration
# -----------------------------
# Number of failures before circuit opens
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
# Time in ms before attempting recovery (default: 30 seconds)
CIRCUIT_BREAKER_RECOVERY_TIMEOUT_MS=30000
# Request timeout in ms for circuit breaker wrapped calls (default: 10 seconds)
CIRCUIT_BREAKER_REQUEST_TIMEOUT_MS=10000

# -----------------------------
# Logging Configuration
# -----------------------------
# Enable log sampling for high-volume logs (true/false)
LOG_SAMPLING_ENABLED=false
# Sample rate for debug logs (0.0-1.0, default: 1.0 = 100%)
LOG_SAMPLING_RATE_DEBUG=1.0
# Sample rate for info logs (0.0-1.0, default: 1.0 = 100%)
LOG_SAMPLING_RATE_INFO=1.0
# Enable request correlation IDs (true/false)
LOG_CORRELATION_ENABLED=true

# -----------------------------
# Memory Management
# -----------------------------
# Heap usage threshold percentage for warnings (default: 85)
MEMORY_WARNING_THRESHOLD=85
# Heap usage threshold percentage for critical alerts (default: 95)
MEMORY_CRITICAL_THRESHOLD=95

# -----------------------------
# Feature Flags
# -----------------------------
FEATURE_NEW_UI=false
FEATURE_BETA_FEATURES=false

# -----------------------------
# Rate Limiting
# -----------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------
# CORS Configuration
# -----------------------------
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
